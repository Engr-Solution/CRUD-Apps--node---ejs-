<!-- Header -->
<%- include('_header') %>

<!-- Header -->
<header
  class="header bg-success w-100 d-flex justify-content-center align-items-center py-3 mb-5"
>
  <nav class="text-light text-uppercase fs-2 fw-bolder">
    User Management System
  </nav>
</header>

<!-- Table -->
<main>
  <div class="container">
    <!-- New User Btn -->
    <a href="/" class="btn btn-success mb-3"
      ><i class="bi bi-chevron-double-left me-2"></i>All Users</a
    >
    <span class="container-fluid">
      <h3 class="fw-bold text-center">
        Update User
        <i class="bi bi-person-plus-fill fs-2 ms-2 fw-bolder"></i>
      </h3>
      <p class="fs-6 text-center">Use the form below to update an Account...</p>
    </span>

    <!-- Form -->
    <form method="POST" class="form" id="update_user">
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input
          type="text"
          class="form-control"
          id="name"
          name="name"
          value="<%= user.name %>"
          placeholder="Name Here..."
        />
        <input type="hidden" name="id" value="<%= user._id %>" />
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          type="email"
          class="form-control"
          id="email"
          name="email"
          value="<%= user.email %>"
          placeholder="Email Here..."
        />
      </div>
      <div class="d-flex justify-content-start">
        <label class="me-5">Gender:</label>
        <div class="form-check me-5">
          <input class="form-check-input" type="radio" name="gender"
          value="male" id="male" <%= user.gender == 'male' ? 'checked' : '' %>
          />
          <label class="form-check-label" for="male"> Male </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="gender"
          value="female" id="female" <%= user.gender == 'female' ? 'checked' :
          '' %> />
          <label class="form-check-label" for="female"> Female </label>
        </div>
      </div>
      <div class="d-flex justify-content-start">
        <label class="me-5">Status:</label>
        <div class="form-check me-5">
          <input class="form-check-input" type="radio" name="status"
          value="active" id="active" <%= user.status == 'active' ? 'checked' :
          '' %> />
          <label class="form-check-label" for="active"> Active </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="status"
          value="inactive" id="inactive" <%= user.status == 'inactive' ?
          'checked' : '' %> />
          <label class="form-check-label" for="inactive"> Inactive </label>
        </div>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-success w-100 mt-3">
          Update User
        </button>
      </div>
    </form>
  </div>
</main>

<!-- Footer -->
<%- include('_footer') %>
